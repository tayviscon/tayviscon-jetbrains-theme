    <name>Tayviscon Theme</name>
    <vendor>Tayviscon</vendor>
    <depends>com.intellij.modules.lang</depends>
    <idea-version since-build="221"/>
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="ru.tayviscontheme.jetbrains.settings.TayvisconSettings"/>
        <postStartupActivity implementation="ru.tayviscontheme.jetbrains.activities.TayvisconStartupActivity"/>
        <notificationGroup displayType="STICKY_BALLOON" id="Tayviscon Theme" isLogByDefault="true"/>
        <themeProvider id="446c2256-013d-4a49-89d5-5544462541ca" path="/themes/Tayviscon.theme.json"/>
    </extensions>
</idea-plugin>